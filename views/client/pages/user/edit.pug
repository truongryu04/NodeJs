extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/alert.pug
block main
    +alert-error(2000)
    .container.my-3
        .row
            .col-12
                +box-head("Chỉnh sửa thông tin cá nhân")
                
        .row
            .col-12
                form(action="/user/edit" method="POST" enctype="multipart/form-data")
                    div(class = "form-group mb-3")
                        label.form-label(for="fullName") Họ và tên
                        input.form-control(type="text" id="fullName" name="fullName" value=user.fullName required)
                    div(class = "form-group mb-3")
                        label.form-label(for="email") Email
                        input.form-control(type="email" id="email" name="email" value=user.email required)
                    div(class = "form-group mb-3")
                        label.form-label(for="phone") Số điện thoại
                        input.form-control(type="text" id="phone" name="phone" value=user.phone)
                    div(class = "form-group mb-3")
                        label.form-label(for="avatar") Ảnh đại diện
                        input(
                            type = "file"
                            class = "form-control mb-3"
                            id = "avatar"
                            name = "avatar"
                            accept = "image/*"
                            upload-image-input
                        )
                        img(
                            src=(user.avatar ? user.avatar:"")
                            class="image-preview"
                            upload-image-preview
                        )
                    button.btn.btn-primary(type="submit") Cập nhật
                    a.btn.btn-secondary.ms-2(href="/user/infor") Quay lại    
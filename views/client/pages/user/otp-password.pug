extends ../../layouts/default.pug
include ../../mixins/alert.pug
block main
    +alert-success(2000)
    +alert-error(5000)
    .container.my-5  
        .row.justify-content-center
            .col-8
                h1.text-center.mb-4 Nhập mã otp xác thực
                form(action="/user/password/otp" method="POST")
                    div(class = "form-group mb-3")
                        label.form-label(for="email") Email
                        input.form-control(type="email" id="email" name="email" value = email readonly)
                    div(class = "form-group mb-3")
                        label.form-label(for="otp") Mã OTP
                        input.form-control(type="text" id="otp" name="otp" required)
                    button.btn.btn-primary(type="submit" class="w-100") Xác nhận

extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/product-item.pug
include ../../mixins/alert.pug
block main
    +alert-success(2000)

    .container.my-3
        .row
            .col-12 
                +box-head("Đặt hàng")
        .row 
            .col-12 
                table(class="table table-bordered")
                    thead 
                        tr 
                            th STT 
                            th Ảnh 
                            th Tên 
                            th Giá
                            th Số lượng 
                            th Tổng tiền 
                    tbody
                        if(cartDetail.products.length>0)
                            each item,index in cartDetail.products
                                tr 
                                    td #{index+1}
                                    td 
                                        img(src=item.productInfor.thumbnail,alt=item.productInfo.title width="80px")
                                    td #{item.productInfor.title}
                                    td #{item.productInfor.newprice}$
                                    td #{item.quantity}
                                    td #{item.totalprice}
                        else 
                            tr 
                                td(
                                    colspan="7"
                                    class="text-center"
                                ) Giỏ hàng trống
                if(cartDetail.products.length>0)
                    h3(class="text-end mt-3") Tổng đơn hàng : #{cartDetail.totalPrice}$
        if(cartDetail.products.length>0)
            .row 
                .col-12 
                    .card.p-4.my-5
                        form(
                            action ="/checkout/order"
                            method = "POST"
                        )
                            div(class="form-group mb-3")
                                lable(for="fullName") Họ tên 
                                input(
                                    type = "text"
                                    class = "form-control"
                                    id="fullName"
                                    name = "fullName"
                                    required
                                )
                            div(class="form-group mb-3")
                                lable(for="phone") Số điện thoại
                                input(
                                    type = "text"
                                    class = "form-control"
                                    id="phone"
                                    name = "phone"
                                    required
                                )
                            div(class="form-group mb-3")
                                lable(for="address") Địa chỉ
                                input(
                                    type = "text"
                                    class = "form-control"
                                    id="address"
                                    name = "address"
                                    required
                                )
                            div(class="form-group mb-3")
                                button(
                                    type ="submit"
                                    class ="btn btn-success w-100"
                                ) ĐẶT HÀNG
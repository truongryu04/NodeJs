extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/product-item.pug
block main
    .container.my-3 
        .row 
            .col-12 
                +box-head("Kết quả tìm kiếm")        
        .row
            if(products.length>0)
                each item in products
                    +product-item(item)
            else 
                h3(class="text-center") Không tìm thấy sản phảm nào

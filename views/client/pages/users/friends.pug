extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/alert.pug

block main
    +alert-success(2000)
    .container.my-3
        include ../../partials/list-btn-user.pug
        .row
            .col-12 
                +box-head("Danh sách bạn bè")
        .row(data-users-friend=user.id)
            each user in users
                .col-4(user-id = user.id)
                    div(class="box-user")
                        div(class="inner-avatar")
                            img(
                                src=( user.avatar ? user.avatar : "/client/images/avatar.png")
                            )
                        div(class="inner-info")
                            div(class="inner-name") #{user.fullName}
                            div(class="inner-buttons")
                                a(
                                    href=`/chat/${user.room_chat_id}`
                                    class="btn btn-sm btn-primary mr-1"
                                ) Nhắn tin
                        div(
                            class="inner-status"
                            status = user.statusOnline
                        ) <i class="fa-solid fa-circle"></i>
block script
    script( src="/client/js/users.js")
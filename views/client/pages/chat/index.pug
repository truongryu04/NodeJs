extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/alert.pug
block main
    +alert-success(2000)

    .container.my-3
        .row
            .col-12 
                +box-head("Chat")
        .row 
            .col-12 
                .chat(my-id=user.id)
                    .inner-body
                        each chat in chats
                            div(class=(chat.user_id==user.id ? "inner-outgoing" :"inner-incoming" ))
                                if(chat.user_id!=user.id)
                                    .inner-name #{chat.inforUser.fullName}
                                if(chat.content)
                                    .inner-content 
                                        | #{chat.content}
                                if(chat.images.length>0)
                                    .inner-images
                                        each image in chat.images
                                            img(src=image) 
                        div(class ="inner-list-typing")
                    .inner-preview-images
                        div(class="custom-file-container" data-upload-id="upload-images") 
                    .inner-foot
                        form(class = "inner-form" action="" method="")
                            input(
                                type = "text"
                                placeholder = "Nhập nội dung ..."
                                name = "content"
                                emoji-picker
                            )
                            label(class=" btn btn-light mx-2 mb-0" 
                            for="file-upload-with-preview-upload-images"
                            ) 
                                <i class="fa-regular fa-image"></i>
                            span(class="button-icon btn btn-light mx-2" ) <i class="fa-regular fa-face-smile"></i>
                            div( class="tooltip" role="tooltip")
                                emoji-picker(class="light")
                            button
                                i.fa-solid.fa-paper-plane
                    
include ../mixins/sub-menu.pug
header.header 
    .container
        .row.align-items-center 
            .col-3
                .inner-logo
                    a(href='/')
                        img(src="/images/image.png",alt="logo")
            .col-5
                form(
                    action = `/search`
                    method="GET"
                )
                    div(class = "form-group d-flex mb-0")
                        input(
                            type="text"
                            placeholder= "Nhập từ khoá"
                            class= "form-control"
                            name="keyword"
                        )
                        button(
                            type="submit"
                            class="btn btn-primary"
                        ) Tìm kiếm
            .col-4
                .inner-menu
                    ul
                        li
                            a(href="/") Trang chủ
                        li(class="sub-menu")
                            -const pathProduct = "/product"
                            a(href=pathProduct) Sản phẩm
                            +sub-menu(categories,pathProduct)

extends ../../layouts/default.pug
include ../../mixins/alert.pug
block main
    h1(class="mb-4") Thêm mới tài khoản
    +alert-error(5000)


    form(
        action = `${prefixAdmin}/account/create`
        method = "POST"
        id ="form-create-account"
        enctype = "multipart/form-data"
    )
        div(class = "form-group")
            label(for="fullName") Họ tên *
            input(
                type="text"
                class = "form-control"
                id = "fullName"
                name = "fullName"
                required
            )
        div(class = "form-group")
            label(for="email") Email *
            input(
                type="email"
                class = "form-control"
                id = "email"
                name = "email"
                required
            )        
        div(class = "form-group")
            label(for="password") Mật khẩu *
            input(
                type="password"
                class = "form-control"
                id = "password"
                name = "password"
                required
            ) 
        div(class = "form-group")
            label(for="phone") Số điện thoại
            input(
                type="text"
                class = "form-control"
                id = "phone"
                name = "phone"
           
            ) 
        div(class = "form-group" upload-image)
            label(for="avatar") Avatar
            input(
                type="file"
                class = "form-control"
                id = "avatar"
                name = "avatar"
                accept = "image/*"
                upload-image-input
            )
            div.upload-wrapper(style="position: relative; display: inline-block; margin-top: 15px;")
                img(src="" upload-image-preview class="image-preview")
                span( class="remove-image" remove-image ) X  

      
        div(class = "form-group")
            label(for="role_id") Phân quyền
            select(id = "role_id" name="role_id" class ="form-control")
                option(disabled select) --Chọn--
                each item in roles 
                    option(value=item.id) #{item.title}
        
        div(class = "form-group form-check form-check-inline")
            input(
                type = "radio"
                class="form-check-input"
                id = "statusActive"
                name = "status"
                value = "active"
                checked
            )
            label(for="statusActive" class = "form-check-label") Hoạt động
        div(class = "form-group form-check form-check-inline")
            input(
                type = "radio"
                class="form-check-input"
                id = "statusInActive"
                name = "status"
                value = "inactive"
            )
            label(for="statusActive" class = "form-check-label") Dừng hoạt động
        div(class = "form-group")
            button(
                type = "submit"
                class = "btn btn-primary "
            ) Tạo mới
extends ../../layouts/default.pug
include ../../mixins/alert.pug
include ../../mixins/select-tree.pug
block main
    +alert-error("5000") 
    +alert-success("5000") 
    h2(class = "mb-4") Chỉnh sửa tài khoản


    if(roles)
        form(
        action =`${prefixAdmin}/account/edit/${account.id}?_method=PATCH`
        method = "POST"
        enctype = "multipart/form-data"
        ) 
            div(class = "form-group")
                label(for="fullName") Họ tên *
                input(
                    type="text"
                    class = "form-control"
                    id = "fullName"
                    name = "fullName"
                    value = account.fullName
                    required
                )
            div(class = "form-group")
                label(for="email") Email *
                input(
                    type="email"
                    class = "form-control"
                    id = "email"
                    name = "email"
                    value = account.email
                    required
                )        
            div(class = "form-group")
                label(for="password") Mật khẩu *
                input(
                    type="password"
                    class = "form-control"
                    id = "password"
                    name = "password"

                ) 
            div(class = "form-group")
                label(for="phone") Số điện thoại
                input(
                    type="text"
                    class = "form-control"
                    id = "phone"
                    value = account.phone
                    name = "phone"
            
                ) 
            div(class = "form-group" upload-image)
                label(for="avatar") Avatar
                input(
                    type="file"
                    class = "form-control"
                    id = "avatar"
                    name = "avatar"
                    accept = "image/*"
                    upload-image-input
                )
                div.upload-wrapper(style="position: relative; display: inline-block; margin-top: 15px;")
                    img(src=account.avatar upload-image-preview class="image-preview")
                    span( class="remove-image" remove-image ) X  

        
            div(class = "form-group")
                label(for="role_id") Phân quyền
                select(id = "role_id" name="role_id" class ="form-control")
                    option(disabled select) --Chọn--
                    each item in roles 
                        option(
                            value=item.id 
                            selected =(item.id == account.role_id ? true : false )
                        ) #{item.title}
            
            div(class = "form-group form-check form-check-inline")
                input(
                    type = "radio"
                    class="form-check-input"
                    id = "statusActive"
                    name = "status"
                    value = "active"
                    checked
                )
                label(for="statusActive" class = "form-check-label") Hoạt động
            div(class = "form-group form-check form-check-inline")
                input(
                    type = "radio"
                    class="form-check-input"
                    id = "statusInActive"
                    name = "status"
                    value = "inactive"
                )
                label(for="statusActive" class = "form-check-label") Dừng hoạt động
            div(class = "form-group")
                button(
                    type = "submit"
                    class = "btn btn-primary "
                ) Cập nhật
    else
        p Vui lòng tạo nhóm quyền khi cập nhật tài khoản 
        p
            a(
                href = `${prefixAdmin}/role/create`
                class = "btn btn-secondary" Tạo nhóm quyền
            )
        
extends ../../layouts/default.pug
include ../../mixins/alert.pug
block main
    +alert-error("5000") 
    h2(class = "mb-4") Thêm danh mục sản phẩm
    form(
        action =`${prefixAdmin}/role/edit/${role.id}?_method=PATCH`
        method = "POST"
    )
        div(class = "form-group")
            label(for="title") Tiêu đề
            input(
                type = "text"
                class="form-control"
                id = "title"
                name = "title"
                value = role.title
                required
            )
        div(class = "form-group")
            label(for="desc") Mô tả ngắn gọn
            textarea(
                class="form-control"
                id = "desc"
                name = "description"
                rows="5"
            ) #{role.description}
       
        div(class = "form-group")
            button(
                type = "submit"
                class = "btn btn-primary "
            ) Chỉnh sửa
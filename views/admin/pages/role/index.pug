extends ../../layouts/default.pug
include ../../mixins/alert.pug
block main

    +alert-success("5000")
    +alert-error("5000")


    h1(class="mb-4") Danh sách nhóm quyền
    .card.mb-3 
        .card-header Danh sách 
        .card-body
            .row 
                .col-8
                .col-4.text-right
                    a(
                        href = `${prefixAdmin}/role/create`
                        class = "btn btn-outline-success"
                    ) +Thêm mới
            table(class="table table-hover table-sm")
                thead
                    tr 
                        th STT
                        th Nhóm quyền
                        th Mô tả ngắn gọn
                        th Hành động
                tbody
                    if (roles.length > 0)
                        each item,index in roles
                            tr
                                td #{index+1}
                                td #{item.title}
                                td #{item.description}
                                td 
                                    a(class="btn btn-warning btn-sm" href = `${prefixAdmin}/role/edit/${item.id}`) Sửa
                                    a(class="btn btn-secondary btn-sm" href = `${prefixAdmin}/role/detail/${item.id}`) Chi tiết
                                    button(
                                        class="btn btn-danger btn-sm"
                                        button-delete
                                        data-id = item.id
                                        ) Xoá
                    else 
                        tr
                            td(colspan="4" class="text-center") Chưa có nhóm quyền nào được tạo
                         
    <script src="/admin/js/product.js"></script>
      
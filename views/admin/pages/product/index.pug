extends ../../layouts/default.pug
include ../../mixins/fillter-status
include ../../mixins/search
include ../../mixins/pagination.pug
include ../../mixins/form-change-multi.pug
include ../../mixins/alert.pug
include ../../mixins/format-date-time.pug
block main

    +alert-success("5000")
    +alert-error("5000")

    if(role.permissions.includes("product_view")) 
        h1(class="mb-4") Danh sách sản phẩm
        .card.mb-3 
            .card-header Bộ lọc và tìm kiếm 
            .card-body
                .row
                    .col-6
                        +fillter-status(fillterStatus)
                    .col-6
                        +search(keyword)     
        .card.mb-3 
            .card-header Sắp xếp
            .card-body
                .row 
                    .col-4
                        div(sort)
                            select(
                                class = "form-controller"
                                name = "sort"
                                sort-select
                            )
                                option(value="position-desc") Vị trí giảm dần
                                option(value="position-asc") Vị trí Tăng dần
                                option(value="price-desc") Giá giảm dần   
                                option(value="price-asc") Giá tăng dần 
                                option(value="title-asc") Tiêu đề A-Z   
                                option(value="title-desc") Tiêu đề Z-A
                        button(
                            class="btn btn-danger mt-2"
                            sort-clear
                        ) Clear
        .card.mb-3 
            .card-header Danh sách 
            .card-body
                .row 
                    .col-8
                        +form-change-multi(`${prefixAdmin}/product/change-multi?_method=PATCH`)
                    .col-4
                        if(role.permissions.includes("product_create")) 
                            a(
                                href = `${prefixAdmin}/product/create`
                                class = "btn btn-outline-success"
                            ) +Thêm mới
                table(class="table table-hover table-sm" checkbox-multi)
                    thead
                        tr 
                            th
                                input(type = "checkbox" name = "checkall")
                            th STT
                            th Hình ảnh 
                            th Tiêu đề
                            th Giá
                            th Vị trí
                            th Trạng thái
                            th Người tạo
                            th Hoạt động
                    tbody
                        each item,index in products
                            tr
                                td 
                                    input(type ="checkbox" name = "id" value=item.id)
                                td #{(pagination.currentPage-1)*pagination.limitItem +(index+1)}
                                td 
                                    img(src=item.thumbnail, alt=item.title width="100px" height="auto")
                                td #{item.title}
                                td #{item.price}
                                td
                                    input(
                                        type = "number"
                                        name = "position"
                                        value = item.position
                                        min = "1"
                                        style = "width : 60px"
                                    )

                                td
                                    if(item.status =="active")
                                        a(
                                            href="javascript:;" 
                                            data-status = item.status
                                            data-id = item.id
                                            button-change-status
                                            class="badge bg-success"
                                        ) Hoạt động
                                    else 
                                        a(
                                            href="javascript:;" 
                                            data-status = item.status
                                            data-id = item.id
                                            button-change-status
                                            class="badge bg-danger"
                                        ) Dừng hoạt động
                                td 
                                    p #{item.account_fullName}
                                    if(item.account_fullName)
                                        +formatDateTime(item.createdBy.createdAt)
                                td 
                                    if(role.permissions.includes("product_edit")) 
                                        a(class="btn btn-warning btn-sm" href = `${prefixAdmin}/product/edit/${item.id}`) Sửa
                                    a(class="btn btn-secondary btn-sm" href = `${prefixAdmin}/product/detail/${item.id}`) Chi tiết
                                    if(role.permissions.includes("product_delete")) 
                                        button(
                                            class="btn btn-danger btn-sm"
                                            button-delete
                                            data-id = item.id
                                            ) Xoá
        +pagination(pagination)
        if(role.permissions.includes("product_edit")) 
            form(
                action="" 
                method="POST"
                id = "form-change-status"
                path = `${prefixAdmin}/product/change-status`
            ) 
        form(
            action="" 
            method="POST"
            id = "form-delete-item"
            path = `${prefixAdmin}/product/delete`
        ) 
    <script src="/admin/js/product.js"></script>
      
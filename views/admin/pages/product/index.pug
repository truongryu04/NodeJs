extends ../../layouts/default.pug
include ../../mixins/fillter-status
include ../../mixins/search
include ../../mixins/pagination.pug
include ../../mixins/form-change-multi.pug
include ../../mixins/alert.pug
block main

    +alert-success("5000")
    +alert-error("5000")

    
    h1(class="mb-4") Danh sách sản phẩm
    .card.mb-3 
        .card-header Bộ lọc và tìm kiếm 
        .card-body
            .row
                .col-6
                    +fillter-status(fillterStatus)
                .col-6
                    +search(keyword)     

    .card.mb-3 
        .card-header Danh sách 
        .card-body
            .row 
                .col-8
                    +form-change-multi(`${prefixAdmin}/product/change-multi?_method=PATCH`)
                .col-4
                    a(
                        href = `${prefixAdmin}/product/create`
                        class = "btn btn-outline-success"
                    ) +Thêm mới
            table(class="table table-hover table-sm" checkbox-multi)
                thead
                    tr 
                        th
                            input(type = "checkbox" name = "checkall")
                        th STT
                        th Hình ảnh 
                        th Tiêu đề
                        th Giá
                        th Vị trí
                        th Trạng thái
                        th Hoạt động
                tbody
                    each item,index in products
                        tr
                            td 
                                input(type ="checkbox" name = "id" value=item.id)
                            td #{index + 1}
                            td 
                                img(src=item.thumbnail, alt=item.title width="100px" height="auto")
                            td #{item.title}
                            td #{item.price}
                            td
                                input(
                                    type = "number"
                                    name = "position"
                                    value = item.position
                                    min = "1"
                                    style = "width : 60px"
                                )
                            td
                                if(item.status =="active")
                                    a(
                                        href="javascript:;" 
                                        data-status = item.status
                                        data-id = item.id
                                        button-change-status
                                        class="badge bg-success"
                                    ) Hoạt động
                                else 
                                    a(
                                        href="javascript:;" 
                                        data-status = item.status
                                        data-id = item.id
                                        button-change-status
                                        class="badge bg-danger"
                                    ) Dừng hoạt động
                            td 
                                a(class="btn btn-warning btn-sm" href = `${prefixAdmin}/product/edit/${item.id}`) Sửa
                                a(class="btn btn-secondary btn-sm" href = `${prefixAdmin}/product/detail/${item.id}`) Chi tiết
                                button(
                                    class="btn btn-danger btn-sm"
                                    button-delete
                                    data-id = item.id
                                    ) Xoá
    +pagination(pagination)
    form(
        action="" 
        method="POST"
        id = "form-change-status"
        path = `${prefixAdmin}/product/change-status`
    ) 
    form(
        action="" 
        method="POST"
        id = "form-delete-item"
        path = `${prefixAdmin}/product/delete`
    ) 
    <script src="/admin/js/product.js"></script>
      